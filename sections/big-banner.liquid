<!-- big-banner.liquid -->
<div class="grid-image-banners">
  <div class="grid-container">
    <div class="grid-banner-img"> 
      {%- if section.settings.image2 != blank -%}
                          <img class="wow fadeInDown" data-wow-duration="1.5s"
                            srcset="{%- if section.settings.image2.width >= 550 -%}{{ section.settings.image2 | image_url: width: 550 }} 550w,{%- endif -%}
                              {%- if section.settings.image2.width >= 720 -%}{{ section.settings.image2 | image_url: width: 720 }} 720w,{%- endif -%}
                              {%- if section.settings.image2.width >= 990 -%}{{ section.settings.image2 | image_url: width: 990 }} 990w,{%- endif -%}
                              {%- if section.settings.image2.width >= 1100 -%}{{ section.settings.image2 | image_url: width: 1100 }} 1100w,{%- endif -%}
                              {%- if section.settings.image2.width >= 1500 -%}{{ section.settings.image2 | image_url: width: 1500 }} 1500w,{%- endif -%}
                              {%- if section.settings.image2.width >= 2200 -%}{{ section.settings.image2 | image_url: width: 2200 }} 2200w,{%- endif -%}
                              {%- if section.settings.image2.width >= 3000 -%}{{ section.settings.image2 | image_url: width: 3000 }} 3000w,{%- endif -%}
                              {{ section.settings.image2 | image_url }} {{ section.settings.image2.width }}w"
                            src="{{ section.settings.image2 | image_url: width: 1500 }}"
                            sizes="(min-width: {{ settings.page_width }}px) {% if section.blocks.size == 1 %}calc({{ settings.page_width }}px - 100px){% else %}{{ settings.page_width | minus: 100 | times: 0.67 | round }}px{% endif %}, (min-width: 750px){% if section.blocks.size == 1 %} calc(100vw - 100px){% else %} 500px{% endif %}, calc(100vw - 30px)"
                            alt="{{ section.settings.description | escape }}"
                            loading="lazy"
                            width="{{ section.settings.image2.width }}"
                            height="{{ section.settings.image2.height }}"
                          >
      {% endif %}
      {% if section.settings.enable_container %}
      <div class="grid-banner-detail wow fadeInDown" data-wow-duration="1.5s">
        <h2>{{section.settings.title}}</h2>
        <p>{{section.settings.subtitle}}</p>
        <a href="{{section.settings.button_link}}">{{section.settings.button}}</a>
      </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
   "name":"Big Newbanner",
   "settings":[
      {
         "type":"image_picker",
         "id":"image2",
         "label":"Image"
      },
      {
         "type":"checkbox",
         "id":"enable_container",
         "label":"Enable Overlay Container"
      },
      {
         "type":"text",
         "id":"title",
         "label":"Title"
      },
      {
         "type":"text",
         "id":"subtitle",
         "label":"Sub Title"
      },
      {
         "type":"text",
         "id":"button",
         "label":"Button"
      },
      {
         "type":"url",
         "id":"button_link",
         "label":"Button Link"
      }
   ],
   "presets":[
      {
         "name":"Big Newbanner"
      }
   ]
}
{% endschema %}

